  <script>
    $(document).ready(function(){
      $('#btn-submitTweet').on('click', function(event){
        $.ajax({
          type: "POST",
          url: "/home/submitTweet",
          data: $("#tweetInput-form").serialize(),
          dataType: "json",
        })
        .done(function(json){
          $("#tweetInput-form")[0].reset();
          $('#tweets').prepend(`<div class="row tweet"><div class="col-sm-2"><img src="/images/beach.jpg" alt="Profile Picture"></div><div class="col-sm-10"><div class="row userTweetDetail"><h6>${json.firstName} ${json.lastName}</h6><h6 class="lightText">@${json.username}</h6><p class="lightText">3 days ago</p></div><div class="row"><div class="col-sm-12 content"><p>${json.tweet}</p></div></div></div></div><hr/>`);
        })
        event.preventDefault();
      });
    });
  </script>

