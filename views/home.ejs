    <div class="container">
      <div class="row" id="startContent">
        <div class="col-sm-3" id="profile">
          <div class="row" id="profileBorder">
            <div class="row profileRow" id="profilePic">
              <div class="col-sm-12">
                <img src="/images/beach.jpg" alt="Profile Picture">
