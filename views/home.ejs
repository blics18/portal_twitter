            <div class="row profileRow">
              <div class="col-sm-12">
                <h3><%= firstName %> <%= lastName %></h3>
                <p class="lightText">@<%= username %></p>

              </div>
            </div>
            <div class="row profileRow">
              <div class="col-sm-6">
                <p>Tweets</p>
                <p>0</p>
              </div>
              <div class="col-sm-6">
                <p>Following</p>
                <p>8</p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-9">
          <div class="row">
            <div class="col-sm-12" id="inputRow">
              <form id="tweetInput-form">
                <div class="form-group">
                  <input type="text" class="form-control" name="tweetInput" placeholder="What's happening?">
                </div>
                <button id ="btn-submitTweet" class="btn mb-2">Tweet</button>
              </form>
            </div>
          </div>
          <div id="tweets">
          <div class="row tweet">
            <div class="col-sm-2">
                <img src="/images/beach.jpg" alt="Profile Picture">
            </div>
